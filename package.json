{
  "name": "blitzar",
  "version": "0.0.0",
  "description": "A Vue component collection for blitzing fast prototyping âš¡",
  "main": "dist/index.js",
  "scripts": {
    "audit": "lerna-audit",
    "dev": "npm run prepare && cd packages/dev && npm run dev",
    "dev-docs": "npm run prepare && cd packages/docs && npm run dev",
    "test": "lerna run test",
    "build": "lerna run build",
    "publish": "lerna publish",
    "prepare": "npm run copy-form-to-docs && npm run copy-form-to-dev",
    "copy-form-to-docs": "copyfiles --up 3 'packages/form/src/**/*' packages/docs/src/components/atoms/form",
    "copy-form-to-dev": "copyfiles --up 3 'packages/form/src/**/*' packages/dev/src/components/atoms/form",
    "dependencies-install": "npm i && lerna bootstrap",
    "dependencies-update-all": "ncu --semverLevel major -u && lerna exec 'ncu --semverLevel major -u' && npm run dependencies-install",
    "dependencies-check-for-updates": "ncu --semverLevel major && lerna exec 'ncu --semverLevel major'",
    "dependencies-reinstall-all": "rimraf node_modules && lerna clean -y && npm run dependencies-install"
  },
  "author": "Luca Ban - Mesqueeb",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/mesqueeb/blitzar/issues"
  },
  "homepage": "https://github.com/mesqueeb/blitzar#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mesqueeb/blitzar.git"
  },
  "devDependencies": {
    "@babel/core": "^7.11.4",
    "@babel/register": "^7.10.5",
    "@types/node": "^14.6.0",
    "@types/webpack-env": "^1.15.2",
    "@typescript-eslint/eslint-plugin": "^3.9.1",
    "@typescript-eslint/parser": "^3.9.1",
    "ava": "^3.12.0",
    "babel-eslint": "^10.1.0",
    "copyfiles": "^2.3.0",
    "eslint": "^7.7.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-loader": "^4.0.2",
    "eslint-plugin-vue": "^6.2.2",
    "esm": "^3.2.25",
    "lerna": "^3.22.1",
    "node-sass": "^4.14.1",
    "npm-check-updates": "^7.1.1",
    "prettier": "^2.0.5",
    "rimraf": "^3.0.2",
    "rollup": "^2.26.5"
  }
}
